{
  "name": "darsy-lms",
  "version": "1.0.0",
  "productName": "Darsy LMS",
  "description": "Best LMS app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-default": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "darsy-lms",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "images/icon@2x.ico"
    },
    "nsis": {
      "installerIcon": "images/icon@2x.ico",
      "uninstallerIcon": "images/icon@2x.ico",
      "uninstallDisplayName": "Darsy LMS",
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "Taskedo",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.4.1",
    "@electron-forge/maker-deb": "^6.4.1",
    "@electron-forge/maker-rpm": "^6.4.1",
    "@electron-forge/maker-squirrel": "^6.4.1",
    "@electron-forge/maker-zip": "^6.4.1",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.1",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
